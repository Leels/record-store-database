<h3><center>Album Search</center></h3>
<form action="/albums">
  <div class="form-group">
    <input id="search" name="search" class="form-control bg-success" type="text">
  </div>
  <button type="submit" class="btn btn-primary">Go!</button>
</form>

<h3><center>Available Records</center></h3>
<% if @albums.any? %>
<ul>
  <% @albums.each do |album| %>
  <li><a href="/albums/<%= album.id %>"><strong><%= album.name %>:</strong> <%= album.status == "t" ? "Available" : "Sold" %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no records to display.</p>
<% end %>

<form action="/albums" method="get">
  <button type="submit" name="alphabetize" class="btn btn-warning">Alphabetize!</button>
  <button type="submit" name="sort_year" class="btn btn-warning">Sort by year!</button>
  <button type="submit" name="sort_cost" class="btn btn-warning">Sort by cost!</button>
  <button type="submit" name="random" class="btn btn-warning">Get a random album</button>
</form>

<a href="/albums/new">Add a new album</a><br>
<a href="/">Return to main page</a>
